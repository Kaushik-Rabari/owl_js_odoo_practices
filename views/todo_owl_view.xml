<odoo>
    <!-- search view -->
    <record id="todo_owl_search_view" model="ir.ui.view">
        <field name="name">todo.owl.search.view</field>
        <field name="model">todo.owl</field>
        <field name="arch" type="xml">
            <search string="Todo Owl">
                <field name="name"/>
                <field name="color"/>
                <field name="completed"/>
            </search>
        </field>
    </record>

    <!-- list view -->
    <record id="todo_owl_list_view" model="ir.ui.view">
        <field name="name">todo.owl.list.view</field>
        <field name="model">todo.owl</field>
        <field name="arch" type="xml">
            <list string="Todo Owl">
                <field name="name"/>
                <field name="color"/>
                <field name="completed"/>
            </list>
        </field>
    </record>
    
    <!-- form view -->
    <record id="todo_owl_form_view" model="ir.ui.view">
        <field name="name">todo.owl.form.view</field>
        <field name="model">todo.owl</field>
        <field name="arch" type="xml">
            <form string="Todo Owl">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                        <field name="completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action -->
    <record id="action_todo_owl" model="ir.actions.act_window">
        <field name="name">Todo Owl</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">todo.owl</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="todo_owl_search_view"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <menuitem id="todo_owl" name="Todo OWL" sequence="10">
        <menuitem id="todo_owl_menu"
            action="action_todo_owl"
            name="Todo's"
            sequence="2"/>
    </menuitem>

</odoo>